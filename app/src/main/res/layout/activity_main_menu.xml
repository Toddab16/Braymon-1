<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apsu.bjordan.braymon.MainMenu"
    android:background="@android:color/background_dark"
    >

    <Button
        android:layout_width="48dp"
        android:layout_marginTop="67dp"
        android:id="@+id/button_game_i"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_retro"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/button_game_ii"
        android:layout_below="@+id/button_game_i"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_retro" />

    <Button
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:id="@+id/button_game_iii"
        android:layout_below="@+id/button_game_ii"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_retro" />

    <Button
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/button_about"
        android:background="@drawable/button_retro"
        android:layout_below="@+id/button_game_iii"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
