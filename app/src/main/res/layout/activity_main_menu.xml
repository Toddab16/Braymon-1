<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apsu.bjordan.braymon.MainMenu"
    android:background="@android:color/background_dark"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/braymon_logo"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_about"
        android:background="@drawable/button_retro"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/button_game_ii"
        android:layout_alignStart="@+id/button_game_ii" />

    <Button
        android:layout_width="48dp"
        android:id="@+id/button_game_i"
        android:background="@drawable/button_retro"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_alignBaseline="@+id/button_game_ii"
        android:layout_alignBottom="@+id/button_game_ii"
        android:layout_toStartOf="@+id/button_game_ii" />

    <Button
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_game_iii"
        android:background="@drawable/button_retro"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="194dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button_game_ii" />

    <Button
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_game_ii"
        android:background="@drawable/button_retro"
        android:layout_alignBaseline="@+id/button_game_iii"
        android:layout_alignBottom="@+id/button_game_iii"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
